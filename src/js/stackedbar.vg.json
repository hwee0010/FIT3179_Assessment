{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": { "url": "src/data/combined.csv" },
  "transform": [
    {
      "filter": {
        "field": "country_upper",
        "oneOf": [
          "CHILE",
          "CHINA",
          "GREECE",
          "INDONESIA",
          "ITALY",
          "JAPAN",
          "MEXICO",
          "NEW ZEALAND",
          "PAPAU NEW GUINEA",
          "RUSSIA",
          "PHILIPPINES",
          "USA"
        ]
      }
    }
  ],
  "width": "800",
  "height": "300",
  "title": {
    "text": "Geographical Distribution of Natural Disasters by Country",
    "fontSize": 40,
    "font": "Impact",
    "fontWeight": ""
  },

  "mark": "bar",
  "params": [
    {
      "name": "Natural Disaster",
      "select": { "type": "point", "fields": ["type"] },
      "bind": {
        "input": "select",
        "options": [null, "tsunami", "volcano", "earthquake"]
      }
    }
  ],
  "encoding": {
    "text": { "field": "CountryInitials", "type": "nominal" },
    "x": {
      "field": "country_upper",
      "type": "nominal",
      "axis": {
        "title": "Country"
      }
    },
    "y": {
      "aggregate": "count",
      "type": "quantitative",
      "axis": {
        "title": "Count"
      },
      "transform": {
        "filter": { "aggregate": "count", "gte": 75 }
      }
    },
    "tooltip": [
      { "field": "type" },
      { "field": "country" },
      { "field": "count" }
    ],
    "color": {
      "field": "type",
      "type": "nominal",
      "scale": {
        "domain": ["tsunami", "volcano", "earthquake"],
        "range": ["blue", "red", "green"]
      }
    }
  }
}
