{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": { "url": "src/data/combined.csv" },
  "transform": [
    {
      "filter": {
        "field": "country_upper",
        "oneOf": [
          "CHILE",
          "CHINA",
          "GREECE",
          "INDONESIA",
          "ITALY",
          "JAPAN",
          "MEXICO",
          "NEW ZEALAND",
          "PAPAU NEW GUINEA",
          "RUSSIA",
          "PHILIPPINES",
          "USA"
        ]
      }
    }
  ],
  "width": "1000",
  "height": "350",
  "title": {
    "text": "Geographical Distribution of Natural Disasters by Country",
    "fontSize": 40,
    "font": "Impact",
    "fontWeight": ""
  },

  "mark": "bar",
  "params": [
    {
      "name": "highlight",
      "select": { "type": "point", "on": "pointerover" }
    },
    {
      "name": "select",
      "select": "point"
    },
    {
      "name": "disaster",
      "select": { "type": "point", "fields": ["type"] },
      "bind": {"legend": {"type": "dblclick"}},
      "labelFontSize": 20
    }
  ],
  "encoding": {
    "text": { "field": "CountryInitials", "type": "nominal" },
    "x": {
      "field": "country_upper",
      "type": "nominal",
      "axis": {
        "title": "Country",
        "titleFontSize": 15

      },
      "sort": "-y"
    },
    "y": {
      "aggregate": "count",
      "type": "quantitative",
      "axis": {
        "title": "Count",
        "titleFontSize": 15

      }
    },
    "fillOpacity": {
      "condition": { "param": "select", "value": 1 },
      "value": 0.3
    },
    "strokeWidth": {
      "condition": [
        {
          "param": "select",
          "empty": false,
          "value": 2
        },
        {
          "param": "highlight",
          "empty": false,
          "value": 1
        }
      ],
      "value": 0
    },
    "opacity": {
      "condition": { "param": "disaster", "value": 1 },
      "value": 0.2
    },
    "tooltip": [
      { "field": "type" },
      { "field": "country" },
      { "aggregate": "count" }
    ],
    "color": {
      "field": "type",
      "type": "nominal",
      "scale": {
        "domain": ["tsunami", "volcano", "earthquake"],
        "range": ["blue", "red", "green"]
      },
      "legend": {
        "title": "Disaster Category",
        "labelFontSize": 15,  
        "titleFontSize": 15
      }
  }
}
}
