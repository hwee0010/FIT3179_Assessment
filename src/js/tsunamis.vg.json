{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 900,
  "height": 500,
  "title": {
    "text": "Global Distribution of Natural Disasters",
    "subtitle":"Below is the distribution of tsunamis and earthquakes globally.",
    "subtitleFontSize":15,
    "fontSize": 30,
    "font":"Impact",
    "fontWeight":"bold"
  },
  "projection": { "type": "equirectangular" },

  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
        "format": { "type": "topojson", "feature": "ne_110m_admin_0_countries" }
      },
      "mark": { "type": "geoshape", "fill": "darkslategray", "stroke": "white" }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
        "format": { "type": "topojson", "feature": "ne_110m_graticules_30" }
      },
      "mark": { "type": "geoshape", "fill": null, "stroke": "lightgray" }
    },
    {
      "data": {
        "url": "src/data/earthquakes.csv"
      },
      "mark": {
        "type": "square",
        "filled": false,
        "opacity": 0.5,
        "tooltip": { "content": "data" }
      },
      "encoding": {
        "tooltip": [
          { "field": "continent" },
          { "field": "country" },
          { "field": "magnitude", "type": "ordinal" },
          { "field": "depth", "type": "quantitative" },
          { "field": "date", "type": "temporal" }
        ],
        "longitude": { "field": "longitude", "type": "quantitative" },
        "latitude": { "field": "latitude", "type": "quantitative" },
        "size": {
          "field": "magnitude",
          "type": "quantitative",
          "title": "Magnitude (Richter Scale)",
          "scale": { "domain": [6, 8] }
        },
        "color": {
          "field": "depth",
          "type": "quantitative",
          "title": "Depth in km",
          "scale": { "scheme": "goldgreen", "domainMin": 0, "domainMax": 150 }
        },
        "strokeOpacity": { "value": 0.3 }
      },
      "params": [
        {
          "name": "magnitude",
          "select": "point"
        },
        {
          "name": "magnitude",
          "value": 5,
          "bind": { "input": "range", "min": 0, "max": 8 }
        }
      ]
    },
    {
      "data": {
        "url": "src/data/tsunamis.csv"
      },
      "mark": {
        "type": "circle",
        "filled": false,
        "opacity": 0.5,
        "tooltip": { "content": "data" }
      },
      "encoding": {
        "tooltip": [
          { "field": "LOCATION_NAME", "title": "Tsunami Location" },
          { "field": "COUNTRY", "title": "Country" },
          {
            "field": "EQ_MAGNITUDE",
            "type": "ordinal",
            "title": "Equivalent Magnitude"
          },
          {
            "field": "EQ_DEPTH",
            "type": "quantitative",
            "title": "Equivalent Depth"
          },
          { "field": "YEAR", "type": "quantitative", "title": "Year" }
        ],
        "longitude": { "field": "LONGITUDE", "type": "quantitative" },
        "latitude": { "field": "LATITUDE", "type": "quantitative" },
        "size": {
          "field": "EQ_MAGNITUDE",
          "type": "quantitative",
          "title": "Tsunami Equivalent Magnitude (To Earthquake)",
          "scale": { "domain": [5, 7] },
          "legend": {}
        },
        "color": {
          "field": "EQ_DEPTH",
          "type": "quantitative",
          "title": "Equivalent Depth in km (To Earthquake)",
          "scale": { "scheme": "greenblue" }
        }
      },
      "params": [
        {
          "name": "EQ_MAGNITUDE",
          "select": "point"
        },
        {
          "name": "EQ_MAGNITUDE",
          "value": 5,
          "bind": { "input": "range", "min": 0, "max": 8 }
        }
      ]
    }
  ]
}
