{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": { "url": "src/data/earthquakes.csv"},
  "transform": [
    {
      "calculate": "datum.continent[0] + datum.continent[1]",
      "as": "CountryInitials"
    }
  ],
  "width": 600,
  "height": 300,
  "title": {
      "text": "Earthquake Magnitude Vs. Population Impact",
      "fontSize": 40,
      "font": "Impact",
      "fontWeight": ""
    },
  "mark": "text",
  "params": [
    {
      "name": "Continent",
      "select": { "type": "point", "fields": ["continent"] },
      "bind": {
        "input": "select",
        "options": [null, "North America", "Asia", "Oceania"]
      }
    }
  ],
  "encoding": {
    "text": { "field": "CountryInitials", "type": "nominal"},
    "tooltip": [
      { "field": "continent"},
      { "field": "country" },
      { "field": "magnitude", "type": "ordinal" },
      { "field": "depth", "type": "quantitative" },
      { "field": "date", "type": "temporal" },
      {"field": "felt","type":"quantitative"},
      {"field": "cdi","type":"ordinal"}
    ], 
    "x": {
      "field": "magnitude",
      "type": "quantitative",
      "scale": { "domainMin": 2.5 },
      "axis": {
        "title": "Earthquake Magnitude (Richter Scale)"
      }
    },
    "y": {
      "field": "cdi",
      "type": "quantitative",
      "axis": {
        "title": "Community Determined Intensity"
      }
    },
    "color": {
      "condition": {
        "param": "Continent",
        "field": "felt",
        "legend": { "title": "No. People Who Reported Feeling Event" },
        "type": "quantitative",
        "bin":true,
        "scale":{"type":"symlog"}
      },
      "value": "grey"
    },
    "size": {
      "field": "felt", "type": "quantitative","scale": {"type":"symlog"}
    }
  },
  "config": {
    "view": {
      "stroke": "transparent"
    }
  }
}
