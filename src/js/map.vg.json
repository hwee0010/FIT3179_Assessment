{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 1200,
    "height": 1000,
    "background": "white",
    "title": {
      "text": "Correlation Between Tectonic Plates and Natural Disasters",
      "fontSize": 40,
      "font": "Impact",
      "fontWeight": "",
      "color":"#5a1111"
    },
    "projection": {
      "type": "mercator",
      "scale": {"signal": "scale"},
      "rotate": [{"signal": "rotateX"}, 0, 0],
      "center": [0, {"signal": "centerY"}],
      "translate": [{"signal": "tx"}, {"signal": "ty"}]
    },
    "params": [
      {"name": "tx","update":"width/2"},
      {"name":"ty","update":"height/2"},
      {
        "name": "scale",
        "value":300,
        "on": [
          {
            "events": {"type": "wheel", "consume": true},
            "update": "clamp(scale * pow(1.003, -event.deltaY * pow(16, event.deltaMode)), 150, 50000)"
          }
        ]
      },
      {
        "name": "angles",
        "value": [0, 0],
        "on": [{"events": "pointerdown", "update": "[rotateX, centerY]"}]
      },
      {
        "name": "cloned",
        "value": null,
        "on": [{"events": "pointerdown", "update": "copy('projection')"}]
      },
      {
        "name": "start",
        "value": null,
        "on": [{"events": "pointerdown", "update": "invert(cloned, xy())"}]
      },
      {
        "name": "drag",
        "value": null,
        "on": [
          {
            "events": "[pointerdown, window:pointerup] > window:pointermove",
            "update": "invert(cloned, xy())"
          }
        ]
      },
      {
        "name": "delta",
        "value": null,
        "on": [
          {
            "events": {"signal": "drag"},
            "update": "[drag[0] - start[0], start[1] - drag[1]]"
          }
        ]
      },
      {
        "name": "rotateX",
        "value": -240,
        "on": [{"events": {"signal": "delta"}, "update": "angles[0] + delta[0]"}]
      },
      {
        "name": "centerY",
        "value": 40,
        "on": [
          {
            "events": {"signal": "delta"},
            "update": "clamp(angles[1] + delta[1], -60, 60)"
          }
        ]
      }
    ],
    "layer": [
      {
        "projection": {
          "type": "mercator",
          "scale": {"signal": "scale"},
          "rotate": [{"signal": "rotateX"}, 0, 0],
          "center": [0, {"signal": "centerY"}],
          "translate": [{"signal": "tx"}, {"signal": "ty"}]
        },
        "data": {
          "url": "src/js/tectonic_plates.json",
          "format": { "type": "topojson", "feature": "tectonic_plates" }
        },
        "mark": { "type": "geoshape", "fill": null, "stroke": "darkred" }
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
          "format": { "type": "topojson", "feature": "ne_110m_admin_0_countries" }
        },
        "mark": {
          "type": "geoshape",
          "fill": "#ddcdcd",
          "stroke": "gray"
        }
      },
      
      {
        "projection": {
          "type": "mercator",
          "scale": {"signal": "scale"},
          "rotate": [{"signal": "rotateX"}, 0, 0],
          "center": [0, {"signal": "centerY"}],
          "translate": [{"signal": "tx"}, {"signal": "ty"}]
        },
        "data": {
          "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
          "format": { "type": "topojson", "feature": "ne_110m_graticules_30" }
        },
        "mark": { "type": "geoshape", "fill": null, "stroke": "lightgray" }
      },
      {
        "projection": {
          "type": "mercator",
          "scale": {"signal": "scale"},
          "rotate": [{"signal": "rotateX"}, 0, 0],
          "center": [0, {"signal": "centerY"}],
          "translate": [{"signal": "tx"}, {"signal": "ty"}]
        },
        "data": {
          "url": "src/js/ne_50m_urban_areas.topojson",
          "format": { "type": "topojson", "feature": "ne_50m_urban_areas" }
        },
        "mark": { "type": "geoshape", "fill": null, "stroke": "lightgray" }
      },
      {
        "projection": {
          "type": "mercator",
          "scale": {"signal": "scale"},
          "rotate": [{"signal": "rotateX"}, 0, 0],
          "center": [0, {"signal": "centerY"}],
          "translate": [{"signal": "tx"}, {"signal": "ty"}]
        },
        "data": { "url": "src/data/eruptions.csv" },
        "mark": {
          "type": "circle",
          "filled": true,
          "opacity": 0.25,
          "size":150,
          "tooltip": { "content": "data" }
        },
      "encoding":{
       "tooltip": [
        {"field": "volcano_name","title":"Volcano Name"}
       ],
       "longitude":{"field":"longitude","type":"quantitative"},
       "latitude":{"field":"latitude","type":"quantitative"},
       "color": {"value": "red"},
       "strokeOpacity":{"value":0.1}
      }
      },
      {
        "projection": {
          "type": "mercator",
          "scale": {"signal": "scale"},
          "rotate": [{"signal": "rotateX"}, 0, 0],
          "center": [0, {"signal": "centerY"}],
          "translate": [{"signal": "tx"}, {"signal": "ty"}]
        },
        "data": {
          "url": "src/data/earthquakes.csv"
        },
        "mark": {
          "type": "square",
          "size":300,
          "filled": true,
          "opacity": 0.5,
          "tooltip": { "content": "data" }
        },
        "encoding": {
          "tooltip": [
            { "field": "continent" },
            { "field": "country" },
            { "field": "magnitude", "type": "ordinal" },
            { "field": "depth", "type": "quantitative" },
            { "field": "date", "type": "temporal" }
          ],
          "longitude": { "field": "longitude", "type": "quantitative" },
          "latitude": { "field": "latitude", "type": "quantitative" },
          "size": {
            "field": "magnitude",
            "type": "quantitative",
            "title": "E.Q. Magnitude",
            "scale": { "domain": [6, 8] },
            "legend": {"labelFontSize":15,"titleFontSize":15,"labelBaseline":"bottom"}
          },
          "color": {
            "field": "depth",
            "type": "quantitative",
            "title": "E.Q. Depth (km)",
            "scale": { "scheme": "blues", "domainMin": 0, "domainMax": 150 },
            "legend": {"labelFontSize":15,"titleFontSize":15}
          },
          "strokeOpacity": { "value": 1 }
        },
        "params": [
          {
            "name": "magnitude",
            "select": "point"
          },
          {
            "name": "magnitude",
            "value": 5,
            "bind": { "input": "range", "min": 0, "max": 8 }
          }
        ]
      },
      {
        "projection": {
          "type": "mercator",
          "scale": {"signal": "scale"},
          "rotate": [{"signal": "rotateX"}, 0, 0],
          "center": [0, {"signal": "centerY"}],
          "translate": [{"signal": "tx"}, {"signal": "ty"}]
        },
        "data": {
          "url": "src/data/tsunamis.csv"
        },
        "mark": {
          "type": "circle",
          "size":300,
          "filled": true,
          "opacity": 0.5,
          "tooltip": { "content": "data" }
        },
        "encoding": {
          "tooltip": [
            {"field":"COUNTRY","title": "Country"}
          ],
          "longitude": { "field": "LONGITUDE", "type": "quantitative" },
          "latitude": { "field": "LATITUDE", "type": "quantitative" },
          "size": {
            "field": "EQ_MAGNITUDE",
            "type": "quantitative",
            "title": "T.M. Magnitude",
            "scale": { "domain": [6, 8] },
            "legend": {"labelFontSize":15,"titleFontSize":15}
          },
          "color": {
            "field": "EQ_DEPTH",
            "type": "quantitative",
            "title": "E.Q. Depth (km)",
            "scale": { "scheme": "bluegreen", "domainMin": 0, "domainMax": 150 },
            "legend": {"labelFontSize":15,"titleFontSize":15}
          },
          "strokeOpacity": { "value": 1 }
        },
        "params": [
          {
            "name": "MAGNITUDE",
            "select": "point"
          },
          {
            "name": "MAGNITUDE",
            "value": 5,
            "bind": { "input": "range", "min": 0, "max": 8 }
          }
        ]
      }
  
    ]
  }
  